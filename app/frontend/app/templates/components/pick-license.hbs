{{#if license.uneditable}}
  {{license-attribution license=license}}
{{else}}
  <div class="form-group">
    <label for="license" class="col-sm-2 control-label">{{t "License" key='license'}}</label>
    <div class="col-sm-10">
      {{bound-select select_class="form-control" select_id="license" content=licenseOptions selection=license.type action=(action (mut license.type)) }}
    </div>
  </div>
  {{#unless private_license}}
    <div class="form-group">
      <label for="author" class="col-sm-2 control-label">{{t "Author" key='author'}}</label>
      <div class="col-sm-4">
        {{input value=license.author_name class="form-control" id="author" placeholder="Name"}}
      </div>
      <div class="col-sm-6">
        {{input value=license.author_url class="form-control" title="Author URL" placeholder="Author URL"}}
      </div>
    </div>
  {{/unless}}
{{/if}}
