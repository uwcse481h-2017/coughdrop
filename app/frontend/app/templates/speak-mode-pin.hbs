{{#modal-dialog action="close" opening='opening' closing='closing'}}
  {{#opening-observer opening='opening'}}{{/opening-observer}}
  <div class="modal-body" style="padding: 0; font-size: 18px;">
    <div class="modal-header">
      <button type="button" class="close" {{action 'close'}}>&times;</button>
      <h3>
        {{t "PIN Required" key='pin_required'}}
      </h3>
    </div>
    <div class="modal-body" style="text-align: center;">
      <table class="table table-bordered advanced_selection" id="pin">
        <tr>
          <td><a {{action "add_digit" "1" on="select"}}>1</a></td>
          <td><a {{action "add_digit" "2" on="select"}}>2</a></td>
          <td><a {{action "add_digit" "3" on="select"}}>3</a></td>
        </tr>
        <tr>
          <td><a {{action "add_digit" "4" on="select"}}>4</a></td>
          <td><a {{action "add_digit" "5" on="select"}}>5</a></td>
          <td><a {{action "add_digit" "6" on="select"}}>6</a></td>
        </tr>
        <tr>
          <td><a {{action "add_digit" "7" on="select"}}>7</a></td>
          <td><a {{action "add_digit" "8" on="select"}}>8</a></td>
          <td><a {{action "add_digit" "9" on="select"}}>9</a></td>
        </tr>
        <tr>
          <td>&nbsp;</td>
          <td><a {{action "add_digit" "0" on="select"}}>0</a></td>
          <td>&nbsp;</td>
        </tr>
      </table>
      {{#if invalid_pin}}
        <p class="text-danger">{{t "Invalid PIN. Try again!" key='invalid_pin'}}</p>
      {{/if}}
      <input type="password" class="form-control" value={{pin}} style="font-size: 50px; height: 55px; text-align: center; line-height: 20px; padding-top: 0;"/>
    </div>
    <div class="modal-footer">
      {{#if show_pin}}
        PIN: {{ model.actual_pin }}
      {{else}}
        <a href="#" {{action "reveal_pin" on="click"}}>touch here to show the PIN</a>
      {{/if}}
    </div>
  </div>    
{{/modal-dialog}}
